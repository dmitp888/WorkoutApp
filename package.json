    "create-react-class": "^15.6.3",
    "express": "^4.16.3",
    "express-session": "^1.16.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
